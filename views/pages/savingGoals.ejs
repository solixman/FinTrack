<div class="container mt-4">
  <h2 class="mb-3">Saving Goals</h2>

  <form action="/savingGoal/create" method="POST" class="mb-4">
    <div class="row g-3 align-items-center">
      <div class="col-md-3">
        <label class="form-label">Target Amount</label>
        <input type="number" name="targetAmount" class="form-control" required>
      </div>


      <div class="col-md-3">
        <label class="form-label">Current Amount</label>
        <input type="number" name="currentAmount" class="form-control" value="0" required>
      </div>


      <div class="col-md-3">
        <label class="form-label">Target Date</label>
        <input type="date" name="targetDate" class="form-control" required>
      </div>


      <div class="col-md-3">
        <label class="form-label">Purpose</label>
        <input type="text" name="purpose" class="form-control" placeholder="e.g. New Laptop" required>
      </div>
    </div>

    <div class="mt-3">
      <div class="form-check">
        <input class="form-check-input" type="checkbox" name="takeFromBalance" id="fromBalanceYes" value="yes">
        <label class="form-check-label" for="fromBalanceYes">
          Take current amount from my balance
        </label>
      </div>
    </div>

    <div class="mt-3">
      <button type="submit" class="btn btn-primary">Add Goal</button>
    </div>
  </form>
</div>