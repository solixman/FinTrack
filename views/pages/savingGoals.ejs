<div class="container mt-4">
  <h2 class="mb-3">Saving Goals</h2>

  <!-- Create Goal Form -->
  <form action="/savingGoal/create" method="POST" class="mb-4">
    <div class="row g-3 align-items-center">
      <div class="col-md-3">
        <label class="form-label">Target Amount</label>
        <input type="number" name="targetAmount" class="form-control" required>
      </div>

      <div class="col-md-3">
        <label class="form-label">Current Amount</label>
        <input type="number" name="currentAmount" class="form-control" value="0" required>
      </div>

      <div class="col-md-3">
        <label class="form-label">Target Date</label>
        <input type="date" name="targetDate" class="form-control" required>
      </div>

      <div class="col-md-3">
        <label class="form-label">Purpose</label>
        <input type="text" name="purpose" class="form-control" placeholder="e.g. New Laptop" required>
      </div>
    </div>

    <!-- Checkbox -->
    <div class="mt-3">
      <div class="form-check">
        <input class="form-check-input" type="checkbox" name="takeFromBalance" id="fromBalanceYes" value="yes">
        <label class="form-check-label" for="fromBalanceYes">
          Take current amount from my balance
        </label>
      </div>
    </div>

    <div class="mt-3">
      <button type="submit" class="btn btn-primary">Add Goal</button>
    </div>
  </form>

  <!-- Goals List -->
  <h4 class="mb-3">Your Goals</h4>

  <% if (savingGoals && savingGoals.length > 0) { %>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Purpose</th>
          <th>Target Amount</th>
          <th>Current Amount</th>
          <th>Target Date</th>
          <th>Progress</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% savingGoals.forEach(goal => { %>
          <tr>
            <td><%= goal.purpose %></td>
            <td><%= goal.targetAmount %></td>
            <td><%= goal.currentAmount %></td>
            <td><%= new Date(goal.targetDate).toLocaleDateString() %></td>
            <td>
              <% const progress = (goal.currentAmount / goal.targetAmount) * 100; %>
              <div class="progress">
                <div 
                  class="progress-bar" 
                  role="progressbar" 
                  style="width: <%= progress %>%" 
                  aria-valuenow="<%= progress %>" 
                  aria-valuemin="0" 
                  aria-valuemax="100">
                  <%= progress.toFixed(0) %>%
                </div>
              </div>
            </td>
            <td>
              <form action="/savingGoal/delete/<%= goal.id %>" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <div class="alert alert-info">
      You have no saving goals yet. Add one above ðŸ‘†
    </div>
  <% } %>
</div>
