<style>
  /* Container Styles */
  .goals-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  /* Header Section */
  .goals-header {
    margin-bottom: 2rem;
  }

  .goals-header h2 {
    font-size: 2rem;
    font-weight: 700;
    color: #1a1a1a;
    margin: 0 0 0.5rem 0;
  }

  .goals-subtitle {
    font-size: 0.875rem;
    color: #6c757d;
  }

  /* Button Styles */
  .btn-teal {
    background: linear-gradient(135deg, #0d9488 0%, #14b8a6 100%);
    color: white;
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
  }

  .btn-teal:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(13, 148, 136, 0.3);
    color: white;
  }

  .btn-outline-teal {
    background: white;
    color: #0d9488;
    border: 2px solid #0d9488;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .btn-outline-teal:hover {
    background: #0d9488;
    color: white;
  }

  .btn-outline-danger {
    background: white;
    color: #dc3545;
    border: 2px solid #dc3545;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .btn-outline-danger:hover {
    background: #dc3545;
    color: white;
  }

  .btn-outline-secondary {
    background: white;
    color: #6c757d;
    border: 2px solid #6c757d;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .btn-outline-secondary:hover {
    background: #6c757d;
    color: white;
  }

  .btn-sm {
    padding: 0.4rem 0.8rem;
    font-size: 0.875rem;
  }

  /* Card Styles */
  .goals-card {
    background: white;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    padding: 2rem;
    margin-bottom: 2rem;
  }

  .goals-card h4 {
    font-size: 1.25rem;
    font-weight: 700;
    color: #1a1a1a;
    margin-bottom: 1.5rem;
  }

  /* Form Styles */
  .form-group {
    margin-bottom: 1.25rem;
  }

  .form-label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 600;
    color: #374151;
    font-size: 0.875rem;
  }

  .form-control {
    width: 100%;
    padding: 0.75rem;
    border: 2px solid #e5e7eb;
    border-radius: 8px;
    font-size: 1rem;
    transition: border-color 0.3s ease;
    box-sizing: border-box;
  }

  .form-control:focus {
    outline: none;
    border-color: #0d9488;
  }

  .form-check {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem;
    background: #f9fafb;
    border-radius: 8px;
    border: 2px solid #e5e7eb;
    transition: all 0.3s ease;
  }

  .form-check:hover {
    border-color: #0d9488;
    background: #f0fdfa;
  }

  .form-check-input {
    width: 20px;
    height: 20px;
    cursor: pointer;
    margin: 0;
  }

  .form-check-label {
    font-weight: 500;
    color: #374151;
    cursor: pointer;
    margin: 0;
  }

  .form-row {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
  }

  /* Table Styles */
  .goals-table-card {
    background: white;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    overflow: hidden;
  }

  .goals-table {
    width: 100%;
    border-collapse: collapse;
  }

  .goals-table thead {
    background: linear-gradient(135deg, #0d9488 0%, #14b8a6 100%);
  }

  .goals-table thead th {
    color: white;
    font-weight: 600;
    padding: 1rem;
    text-align: left;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .goals-table tbody tr {
    border-bottom: 1px solid #e5e7eb;
    transition: background-color 0.2s ease;
  }

  .goals-table tbody tr:hover {
    background-color: #f9fafb;
  }

  .goals-table tbody td {
    padding: 1rem;
    color: #374151;
  }

  .purpose-cell {
    font-weight: 600;
    color: #1a1a1a;
  }

  .amount-cell {
    font-weight: 600;
    color: #0d9488;
  }

  /* Progress Bar Styles */
  .progress-container {
    width: 100%;
  }

  .progress {
    height: 28px;
    background: #e5e7eb;
    border-radius: 8px;
    overflow: hidden;
    position: relative;
  }

  .progress-bar {
    height: 100%;
    background: linear-gradient(135deg, #0d9488 0%, #14b8a6 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 600;
    font-size: 0.875rem;
    transition: width 0.6s ease;
  }

  .progress-bar.high-progress {
    background: linear-gradient(135deg, #10b981 0%, #34d399 100%);
  }

  .progress-bar.complete {
    background: linear-gradient(135deg, #059669 0%, #10b981 100%);
  }

  .actions-cell {
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  .empty-state {
    text-align: center;
    padding: 3rem 1rem;
    color: #9ca3af;
    font-size: 1rem;
  }

  /* Alert Styles */
  .alert-info {
    background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
    border: 2px solid #0ea5e9;
    border-radius: 12px;
    padding: 1.5rem;
    color: #0c4a6e;
    font-weight: 500;
  }

  /* Modal Styles */
  .modal-content {
    border-radius: 12px;
    border: none;
  }

  .modal-header {
    padding: 1.5rem;
    border-bottom: 1px solid #e5e7eb;
  }

  .modal-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: #1a1a1a;
  }

  .btn-close {
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    color: #6c757d;
    padding: 0;
    width: 30px;
    height: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 1;
  }

  .btn-close:hover {
    color: #1a1a1a;
    opacity: 1;
  }

  .modal-body {
    padding: 1.5rem;
  }

  .modal-footer {
    padding: 1.5rem;
    border-top: 1px solid #e5e7eb;
    display: flex;
    gap: 0.75rem;
    justify-content: flex-end;
    flex-wrap: wrap;
  }

  /* Responsive Design */
  @media (max-width: 992px) {
    .form-row {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .form-row {
      grid-template-columns: 1fr;
    }

    .goals-table {
      font-size: 0.875rem;
    }

    .goals-table thead th,
    .goals-table tbody td {
      padding: 0.75rem 0.5rem;
    }

    .actions-cell {
      flex-direction: column;
      gap: 0.25rem;
    }

    .goals-card {
      padding: 1.5rem;
    }
  }
</style>

<div class="goals-container">
  <!-- Header Section -->
  <div class="goals-header">
    <h2>Saving Goals</h2>
    <div class="goals-subtitle">Set and track your financial goals</div>
  </div>

  <!-- Create Goal Form Card -->
  <div class="goals-card">
    <h4>Create New Goal</h4>
    <form action="/savingGoal/create" method="POST">
      <div class="form-row">
        <div class="form-group">
          <label class="form-label">Target Amount</label>
          <input type="number" name="targetAmount" class="form-control" step="0.01" placeholder="10000" required>
        </div>

        <div class="form-group">
          <label class="form-label">Current Amount</label>
          <input type="number" name="currentAmount" class="form-control" step="0.01" value="0" placeholder="0" required>
        </div>

        <div class="form-group">
          <label class="form-label">Target Date</label>
          <input type="date" name="targetDate" class="form-control" required>
        </div>

        <div class="form-group">
          <label class="form-label">Purpose</label>
          <input type="text" name="purpose" class="form-control" placeholder="e.g. New Laptop" required>
        </div>
      </div>

      <!-- Checkbox -->
      <div class="form-group">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" name="takeFromBalance" id="fromBalanceYes" value="yes">
          <label class="form-check-label" for="fromBalanceYes">
            Take current amount from my balance
          </label>
        </div>
      </div>

      <button type="submit" class="btn-teal">Add Goal</button>
    </form>
  </div>

  <!-- Goals List -->
  <h4 style="font-size: 1.5rem; font-weight: 700; color: #1a1a1a; margin-bottom: 1rem;">Your Goals</h4>

  <% if (savingGoals && savingGoals.length > 0) { %>
    <div class="goals-table-card">
      <table class="goals-table">
        <thead>
          <tr>
            <th>Purpose</th>
            <th>Target Amount</th>
            <th>Current Amount</th>
            <th>Target Date</th>
            <th>Progress</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% savingGoals.forEach(goal => { %>
            <tr>
              <td class="purpose-cell"><%= goal.purpose %></td>
              <td class="amount-cell"><%= Number(goal.targetAmount).toFixed(2) %> MAD</td>
              <td class="amount-cell"><%= Number(goal.currentAmount).toFixed(2) %> MAD</td>
              <td><%= new Date(goal.targetDate).toLocaleDateString() %></td>
              <td>
                <div class="progress-container">
                  <% const progress = (goal.currentAmount / goal.targetAmount) * 100; %>
                  <% const progressClass = progress >= 100 ? 'complete' : progress >= 75 ? 'high-progress' : ''; %>
                  <div class="progress">
                    <div 
                      class="progress-bar <%= progressClass %>" 
                      role="progressbar" 
                      style="width: <%= Math.min(progress, 100) %>%" 
                      aria-valuenow="<%= progress %>" 
                      aria-valuemin="0" 
                      aria-valuemax="100">
                      <%= progress.toFixed(0) %>%
                    </div>
                  </div>
                </div>
              </td>
              <td>
                <div class="actions-cell">
                  <button 
                    type="button" 
                    class="btn-outline-teal btn-sm" 
                    data-bs-toggle="modal" 
                    data-bs-target="#addMoneyModal<%= goal.id %>">
                    Add Money
                  </button>
                  <form action="/savingGoal/delete/<%= goal.id %>" method="POST" style="display:inline;">
                    <button type="submit" class="btn-outline-danger btn-sm">Delete</button>
                  </form>
                </div>
              </td>
            </tr>

            <!-- Add Money Modal -->
            <div class="modal fade" id="addMoneyModal<%= goal.id %>" tabindex="-1" aria-labelledby="addMoneyModalLabel<%= goal.id %>" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                  <form action="/savingGoal/addMoney/<%= goal.id %>" method="POST">
                    <div class="modal-header">
                      <h5 class="modal-title" id="addMoneyModalLabel<%= goal.id %>">Add Money to Goal</h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">&times;</button>
                    </div>
                    <div class="modal-body">
                      <p style="color: #6c757d; margin-bottom: 1.5rem;">
                        Adding money to: <strong style="color: #1a1a1a;"><%= goal.purpose %></strong>
                      </p>
                      
                      <div class="form-group">
                        <label class="form-label">Amount to Add</label>
                        <input 
                          type="number" 
                          step="0.01" 
                          class="form-control" 
                          name="amount" 
                          placeholder="Enter amount" 
                          required>
                      </div>

                      <div class="form-group">
                        <div class="form-check">
                          <input 
                            class="form-check-input" 
                            type="checkbox" 
                            name="takeFromBalance" 
                            id="takeFromBalance<%= goal.id %>" 
                            value="yes">
                          <label class="form-check-label" for="takeFromBalance<%= goal.id %>">
                            Take this amount from my balance
                          </label>
                        </div>
                      </div>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                      <button type="submit" class="btn-teal">Add Money</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>

          <% }) %>
        </tbody>
      </table>
    </div>
  <% } else { %>
    <div class="alert-info">
      You have no saving goals yet. Create one above to start tracking your progress! ðŸŽ¯
    </div>
  <% } %>
</div>