<div class="container mt-4">

  <!-- Header with buttons on the left -->
  <div class="d-flex gap-2 mb-3">
    <button class="btn btn-primary px-3 py-2 shadow-sm" data-bs-toggle="modal" data-bs-target="#addCategoryModal" style="border-radius: 8px; font-size: 0.9rem;">
      <i class="bi bi-plus-circle me-1"></i>Add Category
    </button>
    <button class="btn btn-success px-3 py-2 shadow-sm" data-bs-toggle="modal" data-bs-target="#addBudgetModal" style="border-radius: 8px; font-size: 0.9rem;">
      <i class="bi bi-plus-circle me-1"></i>Add Budget
    </button>
  </div>

  <!-- Categories & Budgets Table -->
  <div class="card border-0 shadow-sm" style="border-radius: 12px; overflow: hidden;">
    <table class="table table-hover mb-0">
      <thead style="background-color: #f1f1f1;">
        <tr>
          <th class="fw-semibold py-3 px-4 text-dark">Name</th>
          <th class="fw-semibold py-3 px-4 text-dark">Type</th>
          <th class="fw-semibold py-3 px-4 text-dark">Limit Amount (MAD)</th>
          <th class="fw-semibold py-3 px-4 text-dark">Date</th>
          <th class="fw-semibold py-3 px-4 text-dark">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% categories.forEach(c => { %>
          <tr>
            <td class="py-3 px-4 fw-semibold text-dark"><%= c.name %></td>
            <td class="py-3 px-4">
              <% if (c.type === 'income') { %>
                <span class="badge bg-success px-2 py-1" style="border-radius: 6px; font-size:0.85rem;">Income</span>
              <% } else if (c.type === 'expense') { %>
                <span class="badge bg-danger px-2 py-1" style="border-radius: 6px; font-size:0.85rem;">Expense</span>
              <% } else { %>
                <span class="text-muted">-</span>
              <% } %>
            </td>
            <td class="py-3 px-4">
              <% if (c.Budgets && c.Budgets.length > 0) { %>
                <span class="fw-bold text-primary"><%= c.Budgets[0].limitAmount %></span>
              <% } else { %>
                <span class="text-muted fst-italic">No budget</span>
              <% } %>
            </td>
            <td class="py-3 px-4 text-muted" style="font-size: 0.85rem;">
              <% if (c.Budgets && c.Budgets.length > 0) { %>
                <%= new Date(c.Budgets[0].createdAt).toLocaleDateString() %>
              <% } else { %>
                -
              <% } %>
            </td>
            <td class="py-3 px-4">
              <div class="d-flex gap-2">
                <!-- Delete Category -->
                <form action="/categories/delete/<%= c.id %>" method="POST">
                  <button type="submit" class="btn btn-outline-danger btn-sm" style="border-radius: 6px; font-size: 0.8rem;">
                    <i class="bi bi-trash"></i> Delete
                  </button>
                </form>

                <!-- Remove or Add Budget -->
                <% if (c.Budgets && c.Budgets.length > 0) { %>
                  <form action="/budgets/delete/<%= c.Budgets[0].id %>" method="POST">
                    <button type="submit" class="btn btn-outline-warning btn-sm" style="border-radius: 6px; font-size: 0.8rem;">
                      <i class="bi bi-x-circle"></i> Remove Budget
                    </button>
                  </form>
                <% } else { %>
                  <button class="btn btn-outline-success btn-sm" data-bs-toggle="modal" data-bs-target="#addBudgetModal" style="border-radius: 6px; font-size: 0.8rem;">
                    <i class="bi bi-plus-circle"></i> Add Budget
                  </button>
                <% } %>
              </div>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <!-- No categories fallback -->
  <% if (!categories || categories.length === 0) { %>
    <div class="text-center py-5">
      <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
      <p class="text-muted fs-5 mt-3">No categories added yet.</p>
      <button class="btn btn-primary mt-2" data-bs-toggle="modal" data-bs-target="#addCategoryModal">Add Your First Category</button>
    </div>
  <% } %>

</div>

<!-- Add Category Modal -->
<div class="modal fade" id="addCategoryModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <form action="/categories/create" method="POST" class="modal-content border-0 shadow-lg" style="border-radius: 16px; overflow: hidden;">
      <div class="modal-header text-white" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); border: none; padding: 1.5rem;">
        <h5 class="modal-title fw-bold">Add New Category</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body p-4" style="background-color: #f8f9fa;">
        <div class="mb-3">
          <label class="form-label fw-semibold text-dark mb-2">Name</label>
          <input type="text" name="name" class="form-control form-control-lg shadow-sm" required placeholder="e.g., Groceries, Salary" style="border-radius: 10px; padding: 12px 16px;">
        </div>
        <div class="mb-3">
          <label class="form-label fw-semibold text-dark mb-2">Description</label>
          <input type="text" name="description" class="form-control form-control-lg shadow-sm" placeholder="Optional description" style="border-radius: 10px; padding: 12px 16px;">
        </div>
        <div class="mb-3">
          <label class="form-label fw-semibold text-dark mb-2">Type</label>
          <select name="type" class="form-select form-select-lg shadow-sm" required style="border-radius: 10px; padding: 12px 16px;">
            <option value="income">Income</option>
            <option value="expense">Expense</option>
          </select>
        </div>
      </div>
      <div class="modal-footer bg-white border-0 p-3" style="gap: 10px;">
        <button type="button" class="btn btn-light px-4 py-2" data-bs-dismiss="modal" style="border-radius: 8px;">Cancel</button>
        <button type="submit" class="btn btn-primary px-4 py-2" style="border-radius: 8px;">Add Category</button>
      </div>
    </form>
  </div>
</div>

<!-- Add Budget Modal (no variables) -->
<div class="modal fade" id="addBudgetModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <form action="/budgets/create" method="POST" class="modal-content border-0 shadow-lg" style="border-radius: 16px; overflow: hidden;">
      <div class="modal-header text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none; padding: 1.5rem;">
        <h5 class="modal-title fw-bold">Add Budget</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body p-4" style="background-color: #f8f9fa;">
        <div class="mb-3">
          <label class="form-label fw-semibold text-dark mb-2">Category</label>
          <select name="categoryId" class="form-select form-select-lg shadow-sm" required style="border-radius: 10px; padding: 12px 16px;">
            <% categories.forEach(c => { %>
              <% if (!c.Budgets || c.Budgets.length === 0) { %>
                <option value="<%= c.id %>"><%= c.name %></option>
              <% } %>
            <% }) %>
          </select>
        </div>
        <div class="mb-3">
          <label class="form-label fw-semibold text-dark mb-2">Limit Amount (MAD)</label>
          <input type="number" name="limitAmount" class="form-control form-control-lg shadow-sm" required placeholder="Enter budget amount" style="border-radius: 10px; padding: 12px 16px;">
        </div>
      </div>
      <div class="modal-footer bg-white border-0 p-3" style="gap: 10px;">
        <button type="button" class="btn btn-light px-4 py-2" data-bs-dismiss="modal" style="border-radius: 8px;">Cancel</button>
        <button type="submit" class="btn btn-success px-4 py-2" style="border-radius: 8px;">Add Budget</button>
      </div>
    </form>
  </div>
</div>
