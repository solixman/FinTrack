<style>
  /* Container Styles */
  .transactions-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  /* Header Section */
  .transactions-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .transactions-header h2 {
    font-size: 2rem;
    font-weight: 700;
    color: #1a1a1a;
    margin: 0;
  }

  /* Button Styles */
  .btn-teal {
    background: linear-gradient(135deg, #0d9488 0%, #14b8a6 100%);
    color: white;
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
  }

  .btn-teal:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(13, 148, 136, 0.3);
    color: white;
  }

  .btn-outline-teal {
    background: white;
    color: #0d9488;
    border: 2px solid #0d9488;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .btn-outline-teal:hover {
    background: #0d9488;
    color: white;
  }

  .btn-outline-danger {
    background: white;
    color: #dc3545;
    border: 2px solid #dc3545;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .btn-outline-danger:hover {
    background: #dc3545;
    color: white;
  }

  .btn-outline-warning {
    background: white;
    color: #ffc107;
    border: 2px solid #ffc107;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .btn-outline-warning:hover {
    background: #ffc107;
    color: #1a1a1a;
  }

  .btn-outline-secondary {
    background: white;
    color: #6c757d;
    border: 2px solid #6c757d;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .btn-outline-secondary:hover {
    background: #6c757d;
    color: white;
  }

  .btn-sm {
    padding: 0.4rem 0.8rem;
    font-size: 0.875rem;
  }

  /* Card Styles */
  .transactions-card {
    background: white;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    overflow: hidden;
  }

  /* Table Styles */
  .transactions-table {
    width: 100%;
    border-collapse: collapse;
  }

  .transactions-table thead {
    background: linear-gradient(135deg, #0d9488 0%, #14b8a6 100%);
  }

  .transactions-table thead th {
    color: white;
    font-weight: 600;
    padding: 1rem;
    text-align: left;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .transactions-table tbody tr {
    border-bottom: 1px solid #e5e7eb;
    transition: background-color 0.2s ease;
  }

  .transactions-table tbody tr:hover {
    background-color: #f9fafb;
  }

  .transactions-table tbody td {
    padding: 1rem;
    color: #374151;
  }

  .amount-income {
    color: #10b981;
    font-weight: 700;
    font-size: 1rem;
  }

  .amount-expense {
    color: #ef4444;
    font-weight: 700;
    font-size: 1rem;
  }

  .text-capitalize {
    text-transform: capitalize;
  }

  .actions-cell {
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  .empty-state {
    text-align: center;
    padding: 3rem 1rem;
    color: #9ca3af;
    font-size: 1rem;
  }

  /* Updated modal styles to work with Bootstrap's modal classes */
  .modal-content {
    border-radius: 12px;
    border: none;
  }

  .modal-header {
    padding: 1.5rem;
    border-bottom: 1px solid #e5e7eb;
  }

  .modal-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: #1a1a1a;
  }

  .btn-close {
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    color: #6c757d;
    padding: 0;
    width: 30px;
    height: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 1;
  }

  .btn-close:hover {
    color: #1a1a1a;
    opacity: 1;
  }

  .modal-body {
    padding: 1.5rem;
  }

  .modal-footer {
    padding: 1.5rem;
    border-top: 1px solid #e5e7eb;
    display: flex;
    gap: 0.75rem;
    justify-content: flex-end;
    flex-wrap: wrap;
  }

  /* Form Styles */
  .form-group {
    margin-bottom: 1.25rem;
  }

  .form-label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 600;
    color: #374151;
    font-size: 0.875rem;
  }

  .form-control {
    width: 100%;
    padding: 0.75rem;
    border: 2px solid #e5e7eb;
    border-radius: 8px;
    font-size: 1rem;
    transition: border-color 0.3s ease;
    box-sizing: border-box;
  }

  .form-control:focus {
    outline: none;
    border-color: #0d9488;
  }

  .form-select {
    width: 100%;
    padding: 0.75rem;
    border: 2px solid #e5e7eb;
    border-radius: 8px;
    font-size: 1rem;
    transition: border-color 0.3s ease;
    background-color: white;
    cursor: pointer;
    box-sizing: border-box;
  }

  .form-select:focus {
    outline: none;
    border-color: #0d9488;
  }

  textarea.form-control {
    resize: vertical;
    min-height: 80px;
  }

  /* Delete Modal Specific Styles */
  .delete-options {
    margin: 1rem 0;
    padding: 1rem;
    background: #f9fafb;
    border-radius: 8px;
  }

  .delete-options ul {
    margin: 0.5rem 0;
    padding-left: 1.5rem;
  }

  .delete-options li {
    margin: 0.5rem 0;
    color: #374151;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .transactions-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .transactions-table {
      font-size: 0.875rem;
    }

    .transactions-table thead th,
    .transactions-table tbody td {
      padding: 0.75rem 0.5rem;
    }

    .actions-cell {
      flex-direction: column;
      gap: 0.25rem;
    }
  }
</style>

 Transactions Container 
<div class="transactions-container">
  
   Header Section 
  <div class="transactions-header">
    <h2>Transactions</h2>
    <button type="button" class="btn-teal" data-bs-toggle="modal" data-bs-target="#transactionModal">
      + New Transaction
    </button>
  </div>

   Transactions Table Card 
  <div class="transactions-card">
    <table class="transactions-table">
      <thead>
        <tr>
          <th>Amount</th>
          <th>Date</th>
          <th>Category</th>
          <th>Type</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (transactions.length > 0) { %>
          <% transactions.forEach(t => { %>
            <tr>
               Amount Column 
              <td>
                <% if (t.type === 'expense') { %>
                  <span class="amount-expense">-<%= t.amount %> MAD</span>
                <% } else { %>
                  <span class="amount-income">+<%= t.amount %> MAD</span>
                <% } %>
              </td>

               Date Column 
              <td><%= new Date(t.date).toLocaleDateString() %></td>

               Category Column 
              <td>
                <% const category = categories.find(c => c.id === t.categoryId); %>
                <%= category ? category.name : "Uncategorized" %>
              </td>

               Type Column 
              <td class="text-capitalize"><%= t.type %></td>

               Actions Column 
              <td>
                <div class="actions-cell">
                  <button type="button" class="btn-outline-teal btn-sm" data-bs-toggle="modal" data-bs-target="#editTransactionModal<%= t.id %>">
                    Edit
                  </button>
                  <button type="button" class="btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteTransactionModal<%= t.id %>">
                    Delete
                  </button>
                </div>
              </td>
            </tr>

             Edit Transaction Modal 
            <div class="modal fade" id="editTransactionModal<%= t.id %>" tabindex="-1" aria-labelledby="editTransactionModalLabel<%= t.id %>" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <form action="/transaction/update/<%= t.id %>" method="POST">
                    <div class="modal-header">
                      <h5 class="modal-title" id="editTransactionModalLabel<%= t.id %>">Edit Transaction</h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">&times;</button>
                    </div>
                    <div class="modal-body">
                      <div class="form-group">
                        <label class="form-label">Amount</label>
                        <input type="number" step="0.01" class="form-control" name="amount" value="<%= t.amount %>" required>
                      </div>
                      <div class="form-group">
                        <label class="form-label">Type</label>
                        <select class="form-select" name="type" required>
                          <option value="income" <%= t.type === 'income' ? 'selected' : '' %>>Income</option>
                          <option value="expense" <%= t.type === 'expense' ? 'selected' : '' %>>Expense</option>
                        </select>
                      </div>
                      <div class="form-group">
                        <label class="form-label">Category</label>
                        <select class="form-select" name="categoryId" required>
                          <% categories.forEach(c => { %>
                            <option value="<%= c.id %>" <%= c.id === t.categoryId ? 'selected' : '' %>><%= c.name %></option>
                          <% }) %>
                        </select>
                      </div>
                      <div class="form-group">
                        <label class="form-label">Date</label>
                        <input type="date" class="form-control" name="date" value="<%= new Date(t.date).toISOString().split('T')[0] %>" required>
                      </div>
                      <div class="form-group">
                        <label class="form-label">Note</label>
                        <textarea class="form-control" name="note" rows="2"><%= t.note || '' %></textarea>
                      </div>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                      <button type="submit" class="btn-teal">Update</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>

             Delete Transaction Modal 
            <div class="modal fade" id="deleteTransactionModal<%= t.id %>" tabindex="-1" aria-labelledby="deleteTransactionModalLabel<%= t.id %>" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="deleteTransactionModalLabel<%= t.id %>">Delete Transaction</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">&times;</button>
                  </div>
                  <div class="modal-body">
                    <p>How would you like to delete this transaction?</p>
                    <div class="delete-options">
                      <ul>
                        <li><strong>Delete from history only:</strong> keep its effect on your balance but remove it from the list.</li>
                        <li><strong>Undo entirely:</strong> remove it from history and reverse its effect on the balance.</li>
                      </ul>
                    </div>
                  </div>
                  <div class="modal-footer">
                    <form action="/transaction/delete/<%= t.id %>" method="POST" style="display: inline;">
                      <input type="hidden" name="mode" value="history">
                      <button type="submit" class="btn-outline-warning">Delete from History</button>
                    </form>
                    <form action="/transaction/delete/<%= t.id %>" method="POST" style="display: inline;">
                      <input type="hidden" name="mode" value="undo">
                      <button type="submit" class="btn-outline-danger">Undo Entirely</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>

          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="5" class="empty-state">No transactions found.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

</div>

 Add Transaction Modal 
<div class="modal fade" id="transactionModal" tabindex="-1" aria-labelledby="transactionModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form action="/transaction/create" method="POST">
        <div class="modal-header">
          <h5 class="modal-title" id="transactionModalLabel">Add Transaction</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">&times;</button>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label class="form-label">Amount</label>
            <input type="number" step="0.01" class="form-control" name="amount" required>
          </div>
          <div class="form-group">
            <label class="form-label">Type</label>
            <select class="form-select" name="type" required>
              <option value="income">Income</option>
              <option value="expense">Expense</option>
            </select>
          </div>
          <div class="form-group">
            <label class="form-label">Category</label>
            <select class="form-select" name="categoryId" required>
              <% categories.forEach(c => { %>
                <option value="<%= c.id %>"><%= c.name %></option>
              <% }) %>
            </select>
          </div>
          <div class="form-group">
            <label class="form-label">Date</label>
            <input type="date" class="form-control" name="date" required>
          </div>
          <div class="form-group">
            <label class="form-label">Note</label>
            <textarea class="form-control" name="note" rows="2"></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn-teal">Add</button>
        </div>
      </form>
    </div>
  </div>
</div>
