<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Financial Report - <%= data.user.name %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background: #f8fafc; font-family: Arial, sans-serif; }
    .card { margin-bottom: 20px; }
    .category-list { list-style: none; padding-left: 0; }
    .category-list li { display: flex; justify-content: space-between; padding: 5px 0; border-bottom: 1px solid #e5e7eb; }
    .summary-card { background-color: #0d9488; color: #fff; }
  </style>
</head>
<body>
  <div class="container mt-5">
    <h1 class="mb-4 text-center">Financial Report - <%= data.user.name %></h1>
    <p class="text-center text-muted">Reporting period starting: <%= data.startDate.toDateString() %></p>

    <!-- Summary -->
    <div class="row">
      <div class="col-md-4">
        <div class="card summary-card p-3 text-center">
          <h5>Total Income</h5>
          <p>$<%= data.summary.totalIncome.toFixed(2) %></p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card summary-card p-3 text-center">
          <h5>Total Expenses</h5>
          <p>$<%= data.summary.totalExpenses.toFixed(2) %></p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card summary-card p-3 text-center">
          <h5>Net Savings</h5>
          <p>$<%= data.summary.netSavings.toFixed(2) %></p>
        </div>
      </div>
    </div>

    <!-- Transactions -->
    <div class="card mt-4">
      <div class="card-header">
        <h5>Transactions (Last 30 Days)</h5>
      </div>
      <div class="card-body">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Date</th>
              <th>Type</th>
              <th>Category</th>
              <th>Amount</th>
            </tr>
          </thead>
          <tbody>
            <% data.transactions.forEach(t => { %>
              <tr>
                <td><%= new Date(t.date).toLocaleDateString() %></td>
                <td><%= t.type %></td>
                <td><%= t.Category ? t.Category.name : 'Uncategorized' %></td>
                <td>$<%= t.amount.toFixed(2) %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Categories -->
    <div class="card mt-4">
      <div class="card-header">
        <h5>Spending by Category</h5>
      </div>
      <div class="card-body">
        <ul class="category-list">
          <% for(let cat in data.categories) { %>
            <li>
              <span><%= cat %></span>
              <span>$<%= data.categories[cat].toFixed(2) %></span>
            </li>
          <% } %>
        </ul>
      </div>
    </div>

    <!-- Saving Goals -->
    <div class="card mt-4">
      <div class="card-header">
        <h5>Saving Goals</h5>
      </div>
      <div class="card-body">
        <% if(data.goals.length === 0) { %>
          <p>No saving goals set yet.</p>
        <% } else { %>
          <ul class="category-list">
            <% data.goals.forEach(goal => { %>
              <li>
                <span><%= goal.name %></span>
                <span>$<%= goal.currentAmount.toFixed(2) %> / $<%= goal.targetAmount.toFixed(2) %></span>
              </li>
            <% }) %>
          </ul>
        <% } %>
      </div>
    </div>
  </div>
</body>
</html>
